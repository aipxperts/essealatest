                    <td height="25px">
                        Region:
                    </td>
                    <td>
                        @Html.DropDownList("RegionId", new SelectList(ViewBag.Regions, "ID", "Name"), "-- Select Calling Region --", new { @class = "ui-widget search-dropdown" })
                    </td>
